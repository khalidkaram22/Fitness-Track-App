<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="profile_item">
        <item name="android:layout_margin">32dp</item>
        <item name="android:textSize">16dp</item>
    </style>

<!--    <item name="android:drawableEnd">@drawable/ic_edit</item>-->

    <style name="profile_et">
        <item name="android:textColor">@color/darknavy1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/lightnavy</item>
    </style>

    <style name="addedfood_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darknavy1</item>
    </style>

    <style name="food_detalis">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darknavy1</item>
    </style>



    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorSecondary">@color/lightnavy</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
    </style>

    <style name="MyBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/lightnavy</item>
        <item name="itemTextColor">@color/lightnavy</item>
        <item name="backgroundTint">@color/orange</item> <!-- Background color -->
    </style>

</resources>