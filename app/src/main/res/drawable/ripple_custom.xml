<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/darknavy"> <!-- The ripple color -->

    <!-- Optional background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/newbule" /> <!-- Button background color -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Mask defines the area where the ripple effect is visible -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/darknavy" /> <!-- Mask color -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</ripple>
